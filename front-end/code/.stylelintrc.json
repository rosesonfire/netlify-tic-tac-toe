{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "selector-class-pattern": [
      "^(fe-([A-Z][a-z]*)+((-[a-z]+([A-Z][a-z]*)*)*|(--[a-z]+([A-Z][a-z]*)*)))|((is|has)-[a-z]+([A-Z][a-z]*)*)$",
      {
        "resolveNestedSelectors": true
      }
    ],
    "selector-max-class": 3,
    "max-nesting-depth": 2
  }
}
